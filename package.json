{
  "name": "transactions-tracker",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npm run db:generate && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:prettier": "prettier --check .",
    "format": "prettier --write .",
    "commitlint": "commitlint --edit",
    "prepare": "husky install",
    "db:generate": "npm run db:generate --workspace=@repo/db",
    "db:migrate": "npm run db:migrate:dev --workspace=@repo/db",
    "db:push": "npm run db:push --workspace=@repo/db",
    "db:seed": "npm run db:seed --workspace=@repo/db",
    "docker:up": "npm run docker:up --workspace=@repo/db",
    "docker:down": "npm run docker:down --workspace=@repo/db",
    "docker:logs": "npm run docker:logs --workspace=@repo/db",
    "docker:clean": "npm run docker:clean --workspace=@repo/db",
    "dev:setup": "npm run dev:setup --workspace=@repo/db",
    "dev:reset": "npm run dev:reset --workspace=@repo/db",
    "dev:full": "npm run dev:setup && npm run dev",
    "postinstall": "npm run db:generate"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "prettier --write"
  },
  "dependencies": {
    "@repo/db": "workspace:*",
    "@auth/prisma-adapter": "^2.7.4",
    "@aws-sdk/client-dynamodb": "^3.726.1",
    "@hookform/resolvers": "^3.10.0",
    "@prisma/client": "^6.2.1",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-toggle": "^1.1.2",
    "@radix-ui/react-toggle-group": "^1.1.2",
    "@tanstack/react-table": "^8.20.6",
    "@vercel/analytics": "^1.5.0",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.471.2",
    "next": "15.1.3",
    "next-auth": "^5.0.0-beta.25",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "recharts": "^2.15.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/eslintrc": "^3",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.3",
    "husky": "^8.0.0",
    "postcss": "^8",
    "prettier": "3.4.2",
    "prisma": "^6.2.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "overrides": {
    "react-is": "^19.0.0-rc-69d4b800-20241021"
  }
}
